<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/padding30"
                android:layout_gravity="center"
                android:src="@drawable/logo_n"
                android:scaleType="fitCenter"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mehroon"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:text="@string/select_language"
                />


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/padding20"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mehroon"
                    android:textSize="@dimen/_18sdp"
                    android:text="English"/>



                <ImageView
                    android:id="@+id/RREng"
                    android:src="@drawable/icon_uk"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp">

                </ImageView>

                <TextView
                    android:layout_marginTop="@dimen/padding20"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mehroon"
                    android:textSize="@dimen/_18sdp"
                    android:text="Spanish"/>

                <ImageView
                    android:layout_marginTop="@dimen/padding5"
                    android:id="@+id/RRArbic"
                    android:src="@drawable/icon_spansih"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp">

                </ImageView>

                <!--       <RelativeLayout
                           android:background="@drawable/english_logo"
                           android:id="@+id/RRenglish"
                           android:layout_margin="@dimen/_15sdp"
                           android:layout_weight="1"
                           android:layout_width="@dimen/_250sdp"
                           android:layout_height="@dimen/_120sdp"
                           >


                       </RelativeLayout>

                       <RelativeLayout
                           android:background="@drawable/spinesh_logo"
                           android:id="@+id/RRArbic"
                           android:layout_margin="@dimen/_15sdp"
                           android:layout_weight="1"
                           android:layout_width="@dimen/_250sdp"
                           android:layout_height="@dimen/_120sdp"
                           >


                       </RelativeLayout>
       -->
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
