<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/welcom_second"
            android:layout_width="200dp"
            android:layout_height="250dp"
            >
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="@dimen/padding40"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host To Publish"
            android:textColor="#A81D1A"
            android:textSize="@dimen/padding30"/>

        <TextView
            android:layout_marginRight="@dimen/padding20"
            android:layout_marginLeft="@dimen/padding20"
            android:layout_below="@+id/RR_bien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one_slide"
            android:layout_marginTop="@dimen/padding30"
            android:textSize="@dimen/padding16"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_marginTop="@dimen/padding30"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:backgroundTint="#A81D1A"
                android:layout_margin="@dimen/padding5"
                android:layout_width="@dimen/padding12"
                android:layout_height="@dimen/padding12"
                android:background="@drawable/circle_green_solid"/>

            <TextView
                android:backgroundTint="#A81D1A"
                android:layout_margin="@dimen/padding5"
                android:layout_width="@dimen/padding12"
                android:layout_height="@dimen/padding12"
                android:background="@drawable/circle_green_solid"/>

            <TextView
                android:backgroundTint="#A81D1A"
                android:layout_margin="@dimen/padding5"
                android:layout_width="@dimen/padding12"
                android:layout_height="@dimen/padding12"
                android:background="@drawable/circle_green_solid"/>

            <TextView
                android:backgroundTint="#A81D1A"
                android:layout_margin="@dimen/padding5"
                android:layout_width="@dimen/padding12"
                android:layout_height="@dimen/padding12"
                android:background="@drawable/circle_green_solid"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_skip_two"
        android:src="@drawable/skip_one"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        ></ImageView>


</RelativeLayout>